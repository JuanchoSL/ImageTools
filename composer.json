{
    "name": "juanchosl/imagetools",
    "description": "Little methods collection for create, modify convert and manipulate images, graphics, texts, watermarks and logos",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/JuanchoSL/ImageTools",
    "minimum-stability": "dev",
    "keywords": [
        "image",
        "images",
        "png",
        "jpg",
        "jpeg",
        "gif",
        "avif",
        "webp",
        "gd",
        "gd2",
        "xbm",
        "wbmp",
        "resize",
        "crop",
        "watermark"
    ],
    "authors": [
        {
            "name": "Juan SÃ¡nchez Lecegui",
            "email": "JuanchoSL@hotmail.com",
            "homepage": "https://github.com/JuanchoSL/"
        }
    ],
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/juanchosl/requestlistener"
        }
    ],
    "require": {
        "php": "^8.1",
        "ext-gd": "*",
        "juanchosl/validators": "*",
        "juanchosl/exceptions": "*"
    },
    "require-dev": {
        "phpstan/phpstan": "1.12.*",
        "phpunit/phpunit": "9.6.*",
        "juanchosl/logger": "*",
        "juanchosl/requestlistener": "dev-master",
        "juanchosl/datatransfer": "1.0.8"
    },
    "autoload": {
        "psr-4": {
            "JuanchoSL\\ImageTools\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JuanchoSL\\ImageTools\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "tests": "vendor/bin/phpunit --configuration phpunit.xml tests",
        "phpstan": "vendor/bin/phpstan analyse -c phpstan.neon"
    }
}